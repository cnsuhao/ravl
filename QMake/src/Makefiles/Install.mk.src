recurse:
	@if [ $(OK_TO_INSTALL) = Yes ] ;\
         then \
            for d in $(REQUIRED_DIRS) ;\
            do \
               $(MAKE) $(PKG_MAKEFLAGS) $(CONFIG_MAKEFLAGS) -C $$d -f $(QMAKE_MAKEFILES)/Install.mk $(MAKECMDGOALS) ;\
               RET=$$? ;\
               if [ $$RET -ne 0 ] ;\
               then \
                  exit $$RET ;\
               fi ;\
            done ;\
         fi



