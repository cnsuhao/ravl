ifndef OPENSCENEGRAPHGTK_DEF
  OPENSCENEGRAPHGTK_DEF = 1

  ifdef OPENSCENEGRAPHGTK_HOME
    PKG_CONFIG_PATH := $(OPENSCENEGRAPHGTK_HOME)/lib/pkgconfig:$(PKG_CONFIG_PATH)
    EXELIB += -Wl,-rpath,$(OPENSCENEGRAPHGTK_HOME)/lib
  endif

  INCLUDES += `PKG_CONFIG_PATH=$(PKG_CONFIG_PATH) pkg-config --cflags osgGtk-1.0` -DRAVL_USE_GTKGLEXT=1
  EXELIB := `PKG_CONFIG_PATH=$(PKG_CONFIG_PATH) pkg-config --libs osgGtk-1.0` $(EXELIB)
  
endif
