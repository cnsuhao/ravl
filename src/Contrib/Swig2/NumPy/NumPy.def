ifndef NUMPY_DEF
NUMPY_DEF = 1

  ifndef PYTHON_VERSION
    PYTHON_VERSION = $(shell python -c "import distutils.sysconfig; print distutils.sysconfig.get_config_var('VERSION')")
  endif    

  ifndef NUMPY_HOME
      NUMPY_HOME = /usr/lib64/python$(PYTHON_VERSION)/site-packages/numpy/core
      
  endif

  INCLUDES += -I$(NUMPY_HOME)/include
  
  EXELIB := -L$(NUMPY_HOME)/lib $(EXELIB) -lnpymath

endif
