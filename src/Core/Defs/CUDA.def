ifndef CUDA_DEF
CUDA_DEF=1

ifndef CUDA_HOME
  CUDA_HOME=/usr/local/cuda
endif

INCLUDES+= -I$(CUDA_HOME)/include

ifeq ($(ARC),linux64)
  CUDA_LIB=$(CUDA_HOME)/lib64
else
  CUDA_LIB=$(CUDA_HOME)/lib
endif

EXELIB :=  -L$(CUDA_LIB) -lcudart $(LIBPATHSWITCH)$(CUDA_LIB)   $(EXELIB)

ifeq ($(ARC),macosx386)
  EXELIB :=  -Wl,-rpath,/usr/local/cuda/lib  $(EXELIB)
endif

endif
