ifndef GTKDEF
GTKDEF = 1
################################################
# $Id$

# Check if we're using GTK

ifneq ($(strip $(filter $(RESOURCES),libGTK2)),)

include x11.def

ifndef GTK_INCLUDES
GTK_INCLUDES = `pkg-config gtk+-2.0 --cflags-only-I`
endif

ifndef GTK_CFLAGS
GTK_CFLAGS = `pkg-config gtk+-2.0 --cflags-only-other` -DRAVL_USE_GTK=1
endif

ifndef GTK_LIBS
GTK_LIBS = -lgthread-2.0 `pkg-config gtk+-2.0 --libs`
endif

endif

INCLUDES += $(GTK_INCLUDES)
EXTRA_CFLAGS += $(GTK_CFLAGS)
EXTRA_CCFLAGS += $(GTK_CFLAGS)
EXELIB :=  -lgthread-2.0 $(GTK_LIBS) $(EXELIB)

endif
