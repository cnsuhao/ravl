ifndef VTK_WIDGETS_DEF

  VTK_WIDGETS_DEF = 1

  # Declare libraries for this particulat VTK kit

    VTK_WIDGETS_LIBS = -lvtkWidgets

  # Ensure any dependencies of this kit are already included

    ifndef VTK_HYBRID_DEF
      include vtkHybrid.def
      # Will include the following via recursive dependency:
      #   vtkRendering, vtkIO, vtkParallel, vtkGraphics, vtkImaging,
      #   vtkFiltering, vtkCommon
    endif

    ifndef VTK_VOLUMERENDERING_DEF
      include vtkVolumeRendering.def
      # Will include the following via recursive dependency:
      #   vtkRendering, vtkIO, vtkGraphics, vtkImaging, vtkFiltering,
      #   vtkCommon
    endif

  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_WIDGETS_LIBS) $(VTK_LIBS_USED),$(EXELIB))

  # Remember what the current set of VTK libs are

    VTK_LIBS_USED := $(VTK_WIDGETS_LIBS) $(VTK_LIBS_USED)

endif

