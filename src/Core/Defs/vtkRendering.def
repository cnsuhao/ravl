ifndef VTK_RENDERING_DEF

  VTK_RENDERING_DEF = 1

  # Declare libraries for this particulat VTK kit

    VTK_RENDERING_LIBS = -lvtkRendering -lvtkftgl -lGL -lfreetype

  # Ensure any dependencies of this kit are already included

    ifndef VTK_IO_DEF
      include vtkIO.def
      # Will include vtkFiltering, vtkCommon via recursive dependency
    endif

    ifndef VTK_GRAPHICS_DEF
      include vtkGraphics.def
      # Will include vtkFiltering, vtkCommon via recursive dependency
    endif

    ifndef VTK_IMAGING_DEF
      include vtkImaging.def
      # Will include vtkFiltering, vtkCommon via recursive dependency
    endif

  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_RENDERING_LIBS) $(VTK_LIBS_USED),$(EXELIB))

  # Remember what the current set of VTK libs are

    VTK_LIBS_USED := $(VTK_RENDERING_LIBS) $(VTK_LIBS_USED)

endif

