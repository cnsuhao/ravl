ifndef VTK_VIEWS_DEF

  VTK_VIEWS_DEF = 1

  # Declare libraries for this particulat VTK kit

    VTK_VIEWS_LIBS = -lvtkViews

  # Ensure any dependencies of this kit are already included

    ifndef VTK_INFOVIS_DEF
      include vtkInfovis.def
      # Will include the following via recursive dependency:
      #   vtkWidgets, vtkParallel, vtkHybrid, vtkVolumeRendering, vtkRendering,
      #   vtkIO, vtkGraphics, vtkImaging, vtkFiltering, vtkCommon
    endif

  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_VIEWS_LIBS) $(VTK_LIBS_USED),$(EXELIB))

  # Remember what the current set of VTK libs are

    VTK_LIBS_USED := $(VTK_VIEWS_LIBS) $(VTK_LIBS_USED)

endif

