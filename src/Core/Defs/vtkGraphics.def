ifndef VTK_GRAPHICS_DEF

  VTK_GRAPHICS_DEF = 1

  # Declare libraries for this particulat VTK kit

    VTK_GRAPHICS_LIBS = -lvtkGraphics -lvtkverdict

  # Ensure any dependencies of this kit are already included

    ifndef VTK_FILTERING_DEF
      include vtkFiltering.def
      # Will include vtkCommon via recursive dependency
    endif

  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_GRAPHICS_LIBS) $(VTK_LIBS_USED),$(EXELIB))

  # Remember what the current set of VTK libs are

    VTK_LIBS_USED := $(VTK_GRAPHICS_LIBS) $(VTK_LIBS_USED)

endif

