ifndef VTK_FILTERING_DEF

  VTK_FILTERING_DEF = 1

  # Declare libraries for this particular VTK kit

    VTK_FILTERING_LIBS = -lvtkFiltering


  # Ensure any dependencies of this kit are already included

    ifndef VTK_COMMON_DEF
      include vtkCommon.def
    endif


  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_FILTERING_LIBS) $(VTK_LIBS_USED),$(EXELIB))

    VTK_LIBS_USED :=  $(VTK_FILTERING_LIBS) $(VTK_LIBS_USED)

endif

