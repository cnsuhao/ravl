ifndef VTK_INFOVIS_DEF

  VTK_INFOVIS_DEF = 1

  # Declare libraries for this particulat VTK kit

    VTK_INFOVIS_LIBS = -lvtkInfovis -lvtkalglib

  # Ensure any dependencies of this kit are already included

    ifndef VTK_WIDGETS_DEF
      include vtkWidgets.def
      # Will include the following via recursive dependency:
      #   vtkHybrid, vtkVolumeRendering, vtkRendering, vtkIO, vtkParallel,
      #   vtkFiltering, vtkGraphics, vtkImaging, vtkCommon
    endif

  # Prefix any VTK libraries on the link line with this kit

    EXELIB := $(subst $(VTK_LIBS_USED),$(VTK_INFOVIS_LIBS) $(VTK_LIBS_USED),$(EXELIB))

  # Remember what the current set of VTK libs are

    VTK_LIBS_USED := $(VTK_INFOVIS_LIBS) $(VTK_LIBS_USED)

endif

